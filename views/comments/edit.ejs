<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Review</h1>
        <!--margin 25 on top and bottom, auto on left and right-->
        <div style="width: 30%; margin: 25px auto;">
            <!--action is for the post route-->
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <!--Each input has form-group for spacing purposes-->
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                <!--btn-block makes it take up the entire width-->
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div> 
    </div>
</div>
<% include ../partials/footer %>